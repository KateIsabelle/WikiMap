<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Favourites Page</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- font awesome icons -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.2/css/all.css"
      integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu"
      crossorigin="anonymous"
    />

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Kiwi+Maru:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
    <!-- jQuery -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/favourites.js"></script>
  </head>

  <body>
    <%- include('partials/_new-header') %>
    <main>
      <div class="container">
        <h3>My Favourites</h3>
        <div class="recent maps">
          <% if (user) { %>
          <% for (let map of maps) { %>
          <div class="k-cont">
            <div class="k-row"><%= map.title %> - <a href="#"><%= map.user_name %></a></div>
            <div class="k-row sml-map">
              <div class="">
                <a href="/maps/<%= map.id %>">
                <img src="https://maps.googleapis.com/maps/api/staticmap?center=<%= map.latitude %>,<%= map.longitude %>&zoom=10&size=400x200&maptype=roadmap&<%= map.markersQuery %>key=<%= apiKey %>">
                </a>
                <button class="like-btn liked" type="submit" value="<%= map.id %>"><i class="fas fa-heart"></i></button>
              </div>
            </div>
            <br />
          </div>
          <% } %>
          <% } %>
        </div>
      </div>
    </main>
    <footer>
      <div><p>&copy; girl power midterm</p></div>
    </footer>
  </body>
</html>
